<% content_for :title, "Show product" %>

<h2 class="text-center mt-4"><%= @product.name %></h2>

<div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header fst-italic">
            by <%= @product.user.username if @product.user %>
          </div>
          <div class="card-body">
            <div class="card-text text-start"><%= simple_format(@product.description) %></div>
            <p class="card-text text-start"><%= "#{@product.price} â‚¬" %></p>
            <%= link_to "Edit", edit_product_path(@product), class: "btn btn-outline-info" %>
            <%= link_to "Delete", @product, class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-body-secondar">
            <small>Created <%= time_ago_in_words(@product.created_at) %> ago, Edited <%= time_ago_in_words(@product.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
</div>


